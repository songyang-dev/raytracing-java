<?xml version="1.0"?>
<scene ambient="0.1 0.1 0.1 1.0">
	<!-- define camera,material,lights here -->
	<light name="myLight" color="0.8 0.8 0.8" from="10 10 10 "
		power="1.0" type="point" />
	<light name="myLight2" color="0.8 0.6 0.6" from="-10 1 0"
		power="0.6" type="point" />
	<material name="red" diffuse="1 0 0" specular="0.8 0.8 0.8"
		hardness="16" />
	<material name="blue" diffuse="0 0 1" specular="0.5 0.5 0.5"
		hardness="16" />
	<material name="green" diffuse="0 1 0" specular="0.5 0.5 0.5"
		hardness="16" />

	<!-- render configuration -->
	<render bgcolor="0 0 0" output="Bunny.png">
		<camera name="myCamera" from="0 2 2" to="0 1 0" up="0 1 0"
			fovy="45" width="256" height="256" />
	</render>

	<!-- scene objects -->
	<node name="the bunny" rotation="0 30 0" translation="0 1 0">

		<mesh name="bunny" filename="a4data/bunny.obj">
			<material ref="red" />
		</mesh>
	</node>
	<plane>
		<material ref="blue" />
		<material2 ref="green" />
	</plane>
</scene>
